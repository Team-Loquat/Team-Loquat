<div class="container">

    <!--Page heading-->
    <div class="row">
        <div class="col-md-12">
            <h3 class="h3-responsive">Your collections:
                <a href="#/user/*"><small>back to your profile controls</small></a>
            </h3>
        </div>
    </div>

    <hr>
    {{#each this}}
    <div class="card">        
        <!--Card image-->
        <div class="view overlay hm-white-slight">             
                <img src="imgs/movies-collection.gif" class="img-fluid" alt="">          
            <a href="#!">
                <div class="mask"></div>
            </a>
        </div>
        <!--/.Card image-->

        <!--Card content-->
        <div class="card-block">
            <!--Title-->
            <h4 class="card-title" id="coll-type">Type: {{this.colType}}</h4>
            <!--Text-->
            <p class="card-text">{{this.description}}</p>
            <p class="card-text">{{this.author}}</p>
            <div class="read-more">
                <button class="btn btn-brown">View items</button>
                <button class="btn btn-brown collection-manage-btn">Manage</button>
                <span class="hidden">{{this.key}}</span>
            </div>
        </div>
        <!--/.Card content-->
    </div>
    <!--/.Card-->
    {{/each}}

    <hr>

    <!--Pagination-->
    <nav class="row flex-center wow fadeIn" data-wow-delay="0.2s">
        <ul class="pagination">
            <li class="page-item disabled">
                <a class="page-link" href="#!" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
            </li>
            <li class="page-item active">
                <a class="page-link" href="#!">1 <span class="sr-only">(current)</span></a>
            </li>
            <li class="page-item"><a class="page-link" href="#!">2</a></li>
            <li class="page-item"><a class="page-link" href="#!">3</a></li>
            <li class="page-item"><a class="page-link" href="#!">4</a></li>
            <li class="page-item"><a class="page-link" href="#!">5</a></li>
            <li class="page-item">
                <a class="page-link" href="#!" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
            </li>
        </ul>
    </nav>
    <!--/.Pagination-->
</div>