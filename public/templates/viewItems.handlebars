<!--Share buttons-->
{{#unless this.isPrivate}}
<div>
      
{{!--        <button class="btn btn-primary item-btn-share">Share</button> --}}
         {{#facebook-btn}}127.0.0.1/#/view-items/{{this.key}}{{/facebook-btn}}
         {{#twitter-btn}}127.0.0.1/#/view-items/{{this.key}}{{/twitter-btn}}
         {{#google-btn}}127.0.0.1/#/view-items/{{this.key}}{{/google-btn}}
    
</div>
{{/unless}}
<!--Items-->
{{#each this.items}} 
<div class="card" id="item-preview">
    
    <div class="md-form">
        <span class="item-name-preview"> Title: {{this.name}}</span>
    </div>
    <div class="md-form">
        <img src="{{href}}" class="item-img-preview" />
    </div>
    <div class="md-form">
        <p class="item-description-preview">{{this.description}}</p>
    </div>   
</div>
{{/each}}